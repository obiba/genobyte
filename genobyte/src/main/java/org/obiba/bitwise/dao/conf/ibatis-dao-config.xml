             implementation="org.obiba.bitwise.dao.impl.bdb.DictionaryDtoDaoBdbImpl"/>

        <dao interface="org.obiba.bitwise.dao.BitwiseStoreDtoDao" 
             implementation="org.obiba.bitwise.dao.impl.bdb.BitwiseStoreDtoDaoBdbImpl"/>
    </context>


